<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.socialcampusnew">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SocialCampusNew"
        android:windowSoftInputMode="adjustResize">
        <activity android:name=".Activity.MyPostActivity"></activity>
        <activity android:name=".Activity.DenemeActivity" />
        <activity android:name=".Activity.MainPageActivity" />
        <activity android:name=".Activity.ForgetPassActivity" />
        <activity android:name=".Activity.PostShareActivity" />
        <activity android:name=".Activity.SignUpActivity" />
        <activity android:name=".Activity.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>